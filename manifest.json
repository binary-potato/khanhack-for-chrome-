{
  "manifest_version": 3,
  "name": "KhanHack",
  "version": "5.7.1",
  "description": "Khan Academy Answer Hack",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://*.khanacademy.org/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.khanacademy.org/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "web_accessible_resources": [{
    "resources": ["*.png", "*.svg"],
    "matches": ["*://*.khanacademy.org/*"]
  }]
}
